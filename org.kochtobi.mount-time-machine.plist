<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
    <key>Label</key>
    <string>org.kochtobi.mount-time-machine.plist</string>
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/sbin:/bin:/usr/bin:/usr/local/bin</string>
    </dict>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/mounting-skript.sh</string>
        <string><!-- smb://my-workdgroup-storage --></string>
        <string><!-- your dmg name without the file type e.g. time-machine for time-machine.dmg --></string>
        <string><!-- your username on the workgroup storage --></string>
        <string><!-- your IP address; Can be a prefix or any other part of your IP address e.g. 134.2.116. --></string>
    </array>    
    <key>WorkingDirectory</key>
    <string>/tmp</string>
    <key>StandardErrorPath</key>
    <string>/tmp/org.kochtobi/mount-time-machine.error.log</string>
    <key>StandardOutPath</key>
    <string>/tmp/org.kochtobi/mount-time-machine.out.log</string>
    <key>StartInterval</key>
    <integer>60</integer>
    <key>RunAtLoad</key>
    <true/>
    </dict>
</plist>
